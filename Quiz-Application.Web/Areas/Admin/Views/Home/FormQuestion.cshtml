@model QuestionAndChoises

<form asp-action="Edit">
    <div class="text-danger">
        Doğru cavabı variantların sağındakı seçimlərdən birini seçərək təyin edin
    </div>
    <div class="row">
        <textarea type="text" class="form-control" id="questionText" placeholder="Sualı daxil edin" asp-for="Question"></textarea>
    </div>
    <br />
    @{char variant = 'A'; }
    @foreach (var choice in Model.Choices)
    {
        if (choice.ChoiceID != Model.AnsweId)
        {
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <input type="text" class="form-control" id="@choice.ChoiceID" placeholder="@variant variantı" asp-for="Choices" value="@choice">
                    </div>
                </div>
                <div class="col-lg-2">
                    <input class="form-check-input" type="radio" name="AnswerId" id="@Model.AnsweId+@choice.ChoiceID" asp-for="AnsweId" value="@choice.ChoiceID">
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-10">
                    <div class="form-group">
                        <input type="text" class="form-control" id="@choice.ChoiceID" placeholder="@variant variantı" asp-for="Choices" value="@choice" >
                    </div>
                </div>
                <div class="col-lg-2">
                    <input class="form-check-input" type="radio" name="AnswerId" id="@Model.AnsweId+@choice.ChoiceID" asp-for="AnsweId" value="@choice.ChoiceID" checked>
                </div>
            </div>
        }

        variant++;



    }
    <button typ="submit" class="button-accept">Yadda saxla</button>
</form>
